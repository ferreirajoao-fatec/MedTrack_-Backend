@{
ViewData["Title"] = "Formulário Medtrack";
Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>

<!-- Ícone -->
<link rel="shortcut icon" href="~/imagens/logo-escuro.svg" type="image/x-icon" asp-append-version="true" />

<!-- CSS -->
<link rel="stylesheet" href="~/css/formulario.css" asp-append-version="true" />

<!-- Font Awesome -->
<link rel="stylesheet"
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
crossorigin="anonymous"
referrerpolicy="no-referrer" />
</head>

<body>
<main>
<section class="container-login">

<!-- Formulário -->
<div class="container-form">

<!-- Botão modo escuro -->
<a href="#" id="dark-mode-toggle" class="theme-toggle">
<i class="fa-solid fa-moon"></i>
</a>

<!-- Voltar para home -->
<a class="seta" asp-controller="Home" asp-action="Index">
<i class="fa-solid fa-arrow-left"></i>
</a>

<!-- Título -->
<h1>Preencha seu Formulário</h1>
<p class="texto">Seu espaço para cuidar da saúde.</p>

<!-- Formulário principal -->
<form class="login-form" method="post" asp-controller="Formulario" asp-action="EnviarFormulario">

<!-- Nome -->
<label class="label" for="nome">Nome Completo:</label>
<input type="text" id="nome" name="Nome" required placeholder="Digite seu nome completo.">

<!-- Email -->
<label class="label" for="email">E-mail:</label>
<input type="email" id="email" name="Email" required placeholder="Digite o seu e-mail.">

<!-- Idade -->
<label class="label" for="idade">Idade:</label>
<input type="number" id="idade" name="Idade" required placeholder="Digite sua idade.">

<!-- Tipo Sanguíneo -->
<label class="label" for="tipo-sanguineo">Tipo Sanguíneo:</label>
<select id="tipo-sanguineo" name="TipoSanguineo" required>
<option value="" disabled selected>Selecione seu tipo sanguíneo</option>
<option value="A+">A+</option>
<option value="A-">A-</option>
<option value="B+">B+</option>
<option value="B-">B-</option>
<option value="AB+">AB+</option>
<option value="AB-">AB-</option>
<option value="O+">O+</option>
<option value="O-">O-</option>
</select>

<!-- Medicamento -->
<label class="label" for="medicamento">Medicamento (Nome):</label>
<input type="text" id="medicamento" name="Medicamento" required placeholder="Digite o nome do medicamento.">

<!-- Dosagem -->
<label class="label" for="dosagem">Dosagem:</label>
<input type="text" id="dosagem" name="Dosagem" required placeholder="Digite a dosagem.">

<!-- Observações -->
<label class="label" for="observacoes">Observações:</label>
<textarea id="observacoes" name="Observacoes" rows="4" placeholder="Digite observações adicionais..."></textarea>

<!-- Botão Enviar -->
<input type="submit" value="Enviar" />
</form>
</div>

<!-- VLibras -->
<div vw class="enabled">
<div vw-access-button class="active"></div>
<div vw-plugin-wrapper>
<div class="vw-plugin-top-wrapper"></div>
</div>
</div>
</section>
</main>

<!-- Scripts -->
<script src="~/js/modo-escuro.js" asp-append-version="true"></script>

<!-- VLibras -->
<script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
<script>
new window.VLibras.Widget('https://vlibras.gov.br/app');
</script>
</body>
</html>
