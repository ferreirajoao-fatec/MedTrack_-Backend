@{
ViewData["Title"] = "Login Medtrack";
Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>

<!-- Ícone que aparece na aba do navegador -->
<link rel="shortcut icon" href="~/imagens/logo-escuro.svg" type="image/x-icon">

<!-- Importa o CSS principal da página -->
<link rel="stylesheet" href="~/css/cadastro.css">

<!-- Importa ícones do Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
crossorigin="anonymous" referrerpolicy="no-referrer">
</head>

<body>
<main>
<section class="container-login">

<!-- Container da imagem lateral -->
<div class="container-imagem">
<img src="~/imagens/imagem-header-cadastro.svg" alt="Imagem da Página de Cadastro">
</div>

<!-- Container do formulário -->
<div class="container-form">

<!-- Botão para alternar entre modo claro/escuro -->
<a href="#" id="dark-mode-toggle" class="theme-toggle">
<i class="fa-solid fa-moon"></i>
</a>

<!-- Botão de voltar para a página inicial -->
<a class="seta" asp-controller="Home" asp-action="Index">
<i class="fa-solid fa-arrow-left"></i>
</a>

<!-- Título e subtítulo da página -->
<h1>Faça seu Cadastro</h1>
<p class="texto">Seu espaço para cuidar da saúde.</p>

<!-- Formulário de cadastro -->
<form class="login-form" method="post" asp-action="Cadastro">

<!-- Campo de Nome -->
<label class="label" for="nome">Nome:</label>
<input type="text" id="nome" name="nome" required placeholder="Digite o seu nome completo.">

<!-- Campo de e-mail -->
<label class="label" for="email">E-mail:</label>
<input type="email" id="email" name="Email" required placeholder="Digite o seu e-mail.">

<!-- Campo de e-mail -->
<label class="label" for="email">Repetir E-mail:</label>
<input type="email" id="email" name="Email" required placeholder="Digite o seu e-mail.">

<!-- Campo de senha -->
<label class="label" for="senha">Senha:</label>
<input type="password" id="senha" name="Senha" required placeholder="Digite a sua senha.">

<!-- Campo de senha -->
<label class="label" for="senha">Repetir Senha:</label>
<input type="password" id="senha" name="Senha" required placeholder="Digite a sua senha.">


<!-- Link para login caso já tenha conta -->
<div class="esqueceu-senha">
<a asp-controller="Login" asp-action="Login">Já tem conta? Entrar</a>
</div>

<!-- Botão de envio do formulário -->
<input type="submit" value="Cadastrar">
</form>
</div>
</section>

<!-- SEÇÃO DO VLibras (Acessibilidade para Libras) -->
<div vw class="enabled">
<div vw-access-button class="active"></div>
<div vw-plugin-wrapper>
<div class="vw-plugin-top-wrapper"></div>
</div>
</div>
</main>

<!-- Script para ativar o modo escuro -->
<script src="~/js/modo-escuro.js"></script>

<!-- Importa e inicializa o plugin VLibras -->
<script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
<script>
new window.VLibras.Widget('https://vlibras.gov.br/app');
</script>
</body>
</html>
